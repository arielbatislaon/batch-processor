{
  "name": "temperature-batch-processor",
  "type": "module",
  "version": "1.0.0",
  "description": "High-performance, event-driven TypeScript  API library for  recording Temperature reading with Kafka, RabbitMQ, Redis Cache, and unit tests.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "lint": "eslint 'src/**/*.{ts,js}' --fix",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "typescript",
    "batch-processing",
    "event-driven",
    "kafka",
    "rabbitmq",
    "redis",
    "Cache",
    "microservices"
  ],
  "author": "Ariel Batislaon",
  "license": "ALB",
  "files": [
    "dist/**/*"
  ],
  "dependencies": {
    "@types/node": "^22.0.0",
    "amqplib": "^0.10.9",
    "kafkajs": "^2.2.4",
    "node-fetch": "^3.3.2",
    "pino": "^10.1.0",
    "redis": "^5.9.0"
   },
  "devDependencies": {
    "@types/amqplib": "^0.10.8",
    "@types/jest": "^29.5.5",
    "@types/kafkajs": "^1.9.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "moduleNameMapper": {
    "^(\\.\\.?\\/.+)\\.js$": "$1"
  }
    
  }
}
